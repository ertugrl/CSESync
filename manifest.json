{
  "manifest_version": 3,
  "name": "CSES Sync",
  "version": "1.0",
  "description": "An extension designed to synchronize your CSES problem solutions with GitHub.",
  "permissions": ["activeTab", "storage", "notifications", "identity"],
  "host_permissions": ["*://api.github.com/*", "*://github.com/*"],
  "oauth2": {
    "client_id": "Ov23litFdmGxnoiRmInN",
    "scopes": ["repo"]
  },
  "content_scripts": [
    {
      "matches": ["*://cses.fi/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png"
  }
}